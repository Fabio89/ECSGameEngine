<UserControl x:Class="Editor.DetailsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{StaticResource BackgroundColorPrimary}"
             Foreground="{StaticResource TextColor}"
             xmlns:local="clr-namespace:Editor"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=local:EntityViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
    </UserControl.Resources>

    <!-- <Expander IsExpanded="True" HorizontalAlignment="Stretch" > -->
    <!--     <Expander.Header > -->
    <!--         <TextBlock Text="Details" FontWeight="Bold" Padding="6" /> -->
    <!--     </Expander.Header> -->
    <!--     <Expander.Content> -->
    <!--         <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Visible" VerticalAlignment="Stretch"> -->
    <!-- -->
    <!--         </ScrollViewer> -->
    <!--     </Expander.Content> -->
    <!--     </Expander> -->

    <ListBox x:Name="MyListBox"
             ItemsSource="{Binding Components}"
             Background="{StaticResource BackgroundColorPrimary}"
             Padding="0" Margin="0"
             BorderThickness="1,1,0,0"
             BorderBrush="{StaticResource BackgroundColorSecondary}"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             HorizontalContentAlignment="Stretch">
        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="Padding" Value="0" />
                <Setter Property="Margin" Value="0" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            </Style>
        </ListBox.ItemContainerStyle>
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Expander
                    IsExpanded="True"
                    Padding="0,4,0,4"
                    FontWeight="Bold"
                    Header="{Binding ComponentName}"
                    BorderBrush="{StaticResource BackgroundColorSecondary}"
                    BorderThickness="0,1,0,1">
                    <local:PropertiesPanel
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" />
                </Expander>
            </DataTemplate>
        </ListBox.ItemTemplate>

    </ListBox>
</UserControl>