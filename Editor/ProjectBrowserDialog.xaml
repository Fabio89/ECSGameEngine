<Window x:Class="Editor.ProjectBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Editor"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="ProjectBrowser" Height="320" Width="720">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20" Grid.Row="0">
            <StackPanel.Resources>
                <Style TargetType="{x:Type ToggleButton}">
                    <Setter Property="Margin" Value="10,0,0,0"></Setter>
                </Style>
            </StackPanel.Resources>
            <ToggleButton Content="Open Project" x:Name="OpenProjectButton" Style="{StaticResource DarkModeToggleButtonStyle}" FontSize="32" Width="300" Height="60" Click="OnToggleButton_Click"></ToggleButton>
            <ToggleButton Content="Create Project" x:Name="CreateProjectButton" Style="{StaticResource DarkModeToggleButtonStyle}" FontSize="32" Width="300" Height="60" Margin="30,0,0,0" Click="OnToggleButton_Click"></ToggleButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1"  x:Name="BrowserContent">
            <local:OpenProjectView HorizontalAlignment="Left"></local:OpenProjectView>
            <local:NewProjectView HorizontalAlignment="Left"></local:NewProjectView>
        </StackPanel>
    </Grid>
</Window>